%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img(src="#{@video.big_cover_url}")
      .video_info.span3
        %header
          %h3 #{@video.title}
          %span Rating: #{@review.average('Rating')}
        %p #{@video.description}
        .actions
          = link_to "+ My Queue", video_queue_items_path(video_id: @video.id), method: :post, class: 'btn'

%section.reviews.container
  .row
    .span10.offset1
      = form_for [@video, Review.new] do |f|
        %fieldset
          %label Rate this video
          = f.select :rating, options_for_select([5,4,3,2,1].map {|number| [pluralize(number, "Star")]})
          %label Write Review
          = f.text_area :content, rows:6, class: "span6"
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@review.count})
      %ul
        - @review.each do |review|
          %article.review
            %li.row
              .span2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .span8
                %p= review.content
